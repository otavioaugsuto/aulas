programa {

  inclua biblioteca Matematica --> mat

  funcao inicio() {
    
real base, expoente, resultado

escreva("Digite a base:")
leia(base)

escreva("Digite a potência:")
leia(expoente)

resultado = mat.potencia(base,expoente) 

escreva("O reultado da potência:", resultado)
  }
}
